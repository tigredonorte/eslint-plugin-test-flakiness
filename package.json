{
  "name": "eslint-plugin-test-flakiness",
  "version": "1.1.1",
  "description": "ESLint plugin to detect flaky test patterns and suggest fixes",
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin",
    "test",
    "testing",
    "flaky",
    "flakiness",
    "test-quality",
    "jest",
    "vitest",
    "cypress",
    "playwright",
    "testing-library"
  ],
  "author": "Thompson Filgueiras <tigredonorte@users.noreply.github.com>",
  "license": "MIT",
  "main": "lib/index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:markdown": "npx markdownlint-cli '**/*.md' '.github/**/*.md' --ignore node_modules --config .markdownlintrc.json",
    "lint:markdown:fix": "npx markdownlint-cli '**/*.md' '.github/**/*.md' --ignore node_modules --config .markdownlintrc.json --fix",
    "build": "npm run lint && npm run test",
    "ci": "npm run lint && npm run test:ci",
    "ci:local": "./scripts/ci-local.sh",
    "prepare": "husky",
    "commit": "cz",
    "semantic-release": "semantic-release"
  },
  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "peerDependencies": {
    "eslint": "^7.0.0 || ^8.0.0 || ^9.0.0"
  },
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "import": "./lib/index.js",
      "types": "./lib/index.d.ts"
    }
  },
  "dependencies": {
    "requireindex": "^1.2.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.35.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/eslint": "^8.44.0",
    "@types/node": "^20.0.0",
    "commitizen": "^4.3.1",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.2.5",
    "semantic-release": "^24.2.8",
    "semantic-release-export-data": "^1.1.1",
    "semver": "^7.7.2"
  },
  "engines": {
    "node": ">=14.0.0",
    "pnpm": ">=9.0.0",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tigredonorte/eslint-plugin-test-flakiness.git"
  },
  "bugs": {
    "url": "https://github.com/tigredonorte/eslint-plugin-test-flakiness/issues"
  },
  "homepage": "https://github.com/tigredonorte/eslint-plugin-test-flakiness#readme",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/tigredonorte"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "packageManager": "pnpm@10.15.1",
  "pnpm": {
    "overrides": {
      "tmp@<=0.2.3": ">=0.2.4"
    }
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
